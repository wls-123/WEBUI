.showPicture image{
  width: 100%;
}

.article-item{
  padding: 20rpx;
}

/* 用户头像 */
.user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  float: left;
}
.user view {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 90rpx;
  margin-bottom: 10rpx;
}

/* 文章内容 */
.article_detail image{
  width: 100%;
  height: 400rpx;
}
.article_detail {
  position: relative;
  margin-bottom: 80rpx;
}
.article_detail view {
  position: absolute;
}
.articleTitle {
  bottom: 20%;
  left: 7%;
  font-size: 40rpx;
  color: #fff;
}
.publishTime {
  bottom: 10%;
  left: 7%;
  font-size: 25rpx;
  color: #fff;
}
.likeNum {
  bottom: 10%;
  right: 7%;
  font-size: 30rpx;
  color: #fff;
}
.articleContent {
  text-indent: 2em;
  height: 80rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}